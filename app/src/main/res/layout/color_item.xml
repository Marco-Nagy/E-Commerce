<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/color_cardView"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_8sdp"
            android:elevation="@dimen/_3sdp"
            tools:src="@color/rose"
            app:cardCornerRadius="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView

            android:id="@+id/image_check"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/ic_check"
            android:textStyle="bold"
            android:elevation="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/color_cardView"
            app:layout_constraintEnd_toEndOf="@+id/color_cardView"
            app:layout_constraintTop_toTopOf="@+id/color_cardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>