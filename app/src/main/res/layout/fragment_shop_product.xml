<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F7F9"
        android:orientation="vertical"
        tools:context=".shop.ShopActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/bagsTextV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neusa_next_std_bold"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:text="@string/bags"
        android:textColor="#515C6F"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/see_all_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textColor="@color/rose"
        android:fontFamily="@font/neusa_medium"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/bagsTextV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bagsTextV" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bags_RV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:background="#F5F6F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bagsTextV"
        tools:listitem="@layout/product_item" />
</androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jacketsTextV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neusa_next_std_bold"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="@string/jackets"
                android:textColor="#515C6F"
                android:textSize="@dimen/_30ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/see_all_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textColor="@color/rose"
                android:fontFamily="@font/neusa_medium"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintBottom_toBottomOf="@+id/jacketsTextV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/jacketsTextV" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/jacket_RV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="#F5F6F8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jacketsTextV"
                tools:listitem="@layout/product_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>